<idea-plugin>
    <id>org.fastj.thunder</id>
    <name>Thunder</name>
    <vendor email="" url="http://www.fastj.org">Fast java coding</vendor>

    <description><![CDATA[
        <p>thunder is a plugin that makes java coding faster.</p>
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <completion.contributor
                implementationClass="org.fastj.thunder.completion.ThunderCompletionContributor"
                language="JAVA"/>

    </extensions>

    <!--    <extensions defaultExtensionNs="com.intellij">-->
    <!--        <toolWindow id="thunder"-->
    <!--                    secondary="false"-->
    <!--                    anchor="bottom"-->
    <!--                    factoryClass="com.intellij.execution.services.ServiceViewToolWindowFactory" />-->
    <!--    </extensions>-->

    <actions>
        <action id="org.fastj.thunder.ValidateAction" class="org.fastj.thunder.ui.ValidatorAnnotationAction"
                text="Validator Annotations" description="Add validation annotations onto all fields in the current class.">
            <add-to-group group-id="GenerateGroup" anchor="last"  />
        </action>
        <action id="org.fastj.thunder.ui.InjectMocksAction" class="org.fastj.thunder.ui.InjectMocksAction"
                text="Inject Mocks">
            <add-to-group group-id="GenerateGroup" anchor="last"/>
        </action>
    </actions>

